<h1>All Users</h1>
<hr>
<div class="row">
    <% @users.each do |user| %>
        <div class="col-md-12">
            <div class="well">
                <div class="row">
                    <div class="col-md-6">
                        <%= image_tag(user.avatar.url, style:"width:150px; height:150px;",class:"img-thumbnail") if !user.avatar.blank? %>
                        <%= link_to show_user_path(id: user.id) do %>
                            <h3><%= user.name %></h3>
                            <p>@<%= user.username%></p>
                        <% end %>
                        <p>
                            <%= user.bio %>
                        </p>
                    </div>
                    <div class="col-md-6">
                        <p>
                            <% if current_user.following.include?(user.id) %>
                                <%= link_to "Following", unfollow_path(id: user.id), class: "btn btn-primary", id: "btn-unfollow" %>
                            <% else %>
                                <% if current_user.id != user.id %>
                                    <%= link_to "Follow", now_following_path(id: user.id), class: "btn btn-primary" %>
                                <% end %>
                            <% end %>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    <% end %>
</div> 